<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="example.Application">
         </run>
      </application>
   </extension>
   
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="colibri.rcp.api.example.application"
            name="colibri.rcp.api.example.product">
         <property
               name="appName"
               value="colibri.rcp.api.example.product">
         </property>
      </product>
   </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="example.Perspective"
            id="example.perspective">
      </perspective>
   </extension>
   
</plugin>
