<plugin>

	<extension
			id="application"
			point="org.eclipse.core.runtime.applications">
		<application>
			<run
				class="org.projectocolibri.rcp.Application">
			</run>
		</application>
	</extension>

	<extension
		id="product"
		point="org.eclipse.core.runtime.products">
		<product
			application="org.projectocolibri.rcp.magento.application"
			name="Colibri Magento Connector">
			<property
				name="appName"
				value="Colibri Magento Connector">
			</property>
			<property
				name="windowImages"
				value="icons/colibri_16.png,icons/colibri_32.png,icons/colibri_48.gif,icons/colibri_64.gif,icons/colibri_128.gif">
			</property>
		</product>
	</extension>

	<extension point="org.eclipse.ui.perspectives">
		<perspective
			id="MagentoPerspective"
			name="Magento"
			class="org.projectocolibri.rcp.magento.workbench.MagentoPerspective"
			icon="icons/plug.png">
		</perspective>
	</extension>

	<extension point="org.eclipse.ui.views">
		<view
			id="PerspectiveView"
			name="Perspective"
			class="org.projectocolibri.rcp.magento.workbench.PerspectiveView"
			allowMultiple="false"
			restorable="true">
		</view>
	</extension>

</plugin>
